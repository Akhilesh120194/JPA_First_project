<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
    
    <!-- url -->
      <property name="hibernate.connection.url">jdbc:mysql://127.0.0.1:3306/hibernate-song</property>


		<!-- username -->
		<property name="hibernate.connection.username">hbstudent</property>

		<!-- password -->

		<property name="hibernate.connection.password">hbstudent</property>
		
		<!-- mysql driver -->
		<property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
		
		<property name="hibernate.show_sql">true</property>
		
		<property name="hibernate.format_sql">true</property>
		
		<!-- It will create the table if not exist if exist then it first drop the existing one and then create new one  -->
		<property name="hibernate.hbm2ddl.auto">update</property> 
	</session-factory>
</hibernate-configuration>
